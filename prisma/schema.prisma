generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          String    @default("USER")
  accounts      Account[]
  bots          Bot[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Bot {
  id                   String         @id @default(cuid())
  name                 String
  systemPrompt         String
  primaryColor         String         @default("#3b82f6")
  userId               String
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  telegramBotToken     String?
  // messengerAccessToken String?
  // messengerPageId      String?
  // messengerVerifyToken String?
  // messengerAppId       String?
  user                 User           @relation(fields: [userId], references: [id])
  conversations        Conversation[]
  documents            Document[]

  @@map("bot")
}

model Document {
  id        String   @id @default(cuid())
  content   String
  botId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @default("Untitled document")
  bot       Bot      @relation(fields: [botId], references: [id])

  @@map("document")
}

model Conversation {
  id        String    @id @default(cuid())
  botId     String
  createdAt DateTime  @default(now())
  bot       Bot       @relation(fields: [botId], references: [id])
  messages  Message[]

  @@map("conversation")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("message")
}
